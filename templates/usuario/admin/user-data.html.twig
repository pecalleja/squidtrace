<fieldset>
    <legend>Información Personal</legend>

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.login, "Usuario:", {
            'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        {{ form_errors(form.login) }}
        <div class="col-sm-8">
            {% if app.request.attributes.get('_route')!='admin_usuario_new' %}
                {{ form_widget(form.login,{'attr': {'class': 'form-control', 'disabled':'disabled'}}) }}
            {% else %}
                {{ form_widget(form.login,{'attr': {'class': 'form-control'}}) }}
            {% endif %}

        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.nombre, "Nombre y Apellidos:", {
            'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        {{ form_errors(form.nombre) }}
        <div class="col-sm-8">
            {{ form_widget(form.nombre,{'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.correo, "Correo:", {
            'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        {{ form_errors(form.correo) }}
        <div class="col-sm-8">
            {{ form_widget(form.correo,{'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group" {% if is_granted('ROLE_USER') %}hidden{% endif %}>
        {{ form_label(form.password, "Contraseña:", {
            'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        {{ form_errors(form.password) }}
        <div class="col-sm-8">
            {{ form_widget(form.password,{'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</fieldset>
