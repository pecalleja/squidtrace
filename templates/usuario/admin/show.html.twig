{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuario</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ usuario.login }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ usuario.correo }}</td>
            </tr>
            <tr>
                <th>Kuota</th>
                <td>{{ usuario.kuota }}</td>
            </tr>
            <tr>
                <th>Consumo</th>
                <td>{{ usuario.consumo }}</td>
            </tr>
            <tr>
                <th>Creado</th>
                <td>{% if usuario.creado %}{{ usuario.creado|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Expira</th>
                <td>{% if usuario.expira %}{{ usuario.expira|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ usuario.password }}</td>
            </tr>
            <tr>
                <th>Rol</th>
                <td>{{ usuario.rol }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_usuario_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_usuario_edit', { 'id': usuario.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
