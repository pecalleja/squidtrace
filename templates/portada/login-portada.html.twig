<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">Entrar a SquidTrace</h3></div>
            <div class="panel-body">
                {% if error %}
                    <div class="alert-danger" style="margin-bottom: 10px;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('portada') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" autofocus required id="login" name="_username"
                               placeholder="Usuario" value="{{ last_username|default('') }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" required id="password" name="_password"
                               placeholder="ContraseÃ±a">
                    </div>
                    <input type="submit" class="btn btn-primary" name="login" value="Ingresar">
                </form>
            </div>
        </div>
    </div>
</div>